<html>
    <head>
        <style>
            table{
                font-family: arial,sans-serif;
                border-collapse:collapse;
                width: 100%;
            }
            td,th{
                border:1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }    
        </style>
        <title>Khaliyaan Bill</title>
    </head>
<body>
    <h3 style="text-align: center;">Khaliyaan Cafe</h3>
    <table>
        <tr>
            <th>Name: <%= name %></th>
            <th>Email: <%=email %></th>
        </tr>
        <tr>
            <th>Contact Number: <%= contactNumber %></th>
            <th>Payment Method: <%= paymentMethod %></th>
        </tr>
    </table>

    <h3>Product Details</h3>
    <table>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
        <% if(productDetails.length>0){ %>
            <% productDetails.forEach(product=>{ %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.category %></td>
                    <td><%= product.quantity %></td>
                    <td><%= product.price %></td>
                    <td><%= product.total %></td>
                </tr>
            <%});%>
        <%}%>
    </table>

    <h3>Total: <%= total %></h3>
    <h3 style="text-align: center;">Thank you for visiting Khaliyaan Cafe, Hope to see you again</h3>
</body>
</html>